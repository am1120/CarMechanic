    <servlet>
        <servlet-name>loginservlet</servlet-name>
        <servlet-class>servlets.loginservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProblemServlet</servlet-name>
        <servlet-class>servlets.AddProblemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileServlet</servlet-name>
        <servlet-class>servlets.UserProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchresultsservlet</servlet-name>
        <servlet-class>servlets.searchresultsservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>carview</servlet-name>
        <servlet-class>servlets.CarView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProblemView</servlet-name>
        <servlet-class>servlets.ProblemView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertproblem</servlet-name>
        <servlet-class>servlets.insertproblem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertComment</servlet-name>
        <servlet-class>servlets.InsertComment</servlet-class>
