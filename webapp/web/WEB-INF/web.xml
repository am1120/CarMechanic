<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/car_mechanic</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <display-name>CarMechanic</display-name>
    <servlet>
        <servlet-name>searchservlet</servlet-name>
        <servlet-class>servlets.searchservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signupservlet</servlet-name>
        <servlet-class>servlets.signupservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginservlet</servlet-name>
        <servlet-class>servlets.loginservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProblemServlet</servlet-name>
        <servlet-class>servlets.AddProblemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileServlet</servlet-name>
        <servlet-class>UserProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchresultsservlet</servlet-name>
        <servlet-class>servlets.searchresultsservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>carview</servlet-name>
        <servlet-class>servlets.CarView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProblemView</servlet-name>
        <servlet-class>servlets.ProblemView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchservlet</servlet-name>
        <url-pattern>/searchservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signupservlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginservlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProblemServlet</servlet-name>
        <url-pattern>/addproblem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileServlet</servlet-name>
        <url-pattern>/UserProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchresultsservlet</servlet-name>
        <url-pattern>/searchresult.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>carview</servlet-name>
        <url-pattern>/carview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProblemView</servlet-name>
        <url-pattern>/problemview</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
